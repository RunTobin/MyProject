<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="wrap_content"
      android:background="#dddddd"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:paddingTop="10dip"
            android:text="剩余时间 :"
             android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_wash_time"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:paddingTop="10dip"
             android:textColor="#000000"
            android:text="0分钟"
            android:textSize="22sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip" >

        <CheckBox
            android:id="@+id/btn_wash_kai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开"
             android:textColor="#000000"
          />

        <CheckBox
            android:id="@+id/btn_wash_guan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
             android:textColor="#000000"
            android:layout_toRightOf="@id/btn_wash_kai"
            android:text="关 "
           />

        <CheckBox
            android:id="@+id/btn_wash_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
             android:textColor="#000000"
          android:layout_toRightOf="@id/btn_wash_guan"
            android:text="暂停 "
             />

        <CheckBox
            android:id="@+id/btn_wash_fast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="#000000"
            android:layout_below="@id/btn_wash_kai"
            android:text="快"
            />

        <CheckBox
            android:id="@+id/btn_wash_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_wash_guan"
            android:layout_marginLeft="40dip"
            android:layout_toRightOf="@id/btn_wash_fast"
             android:textColor="#000000"
            android:text="慢 "
         />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" 
        android:layout_marginBottom="20dip">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
             android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:text="取消"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
             android:textColor="#000000"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:text="确定"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>