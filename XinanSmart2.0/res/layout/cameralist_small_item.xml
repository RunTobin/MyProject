<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/camera_item_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
           android:id="@+id/item_play_btn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="25dip"
            android:paddingBottom="2dip"
            android:background="@drawable/camera" />

        <TextView
            android:id="@+id/camera_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/item_play_btn"
            android:text="信安海康摄像头" /> 
            
        <TextView
            android:id="@+id/camera_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/item_play_btn"
            android:layout_below="@id/camera_name_tv"
            android:hint="在线"/> 
       
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    
    
    

</RelativeLayout>