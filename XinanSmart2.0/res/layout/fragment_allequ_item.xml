<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="2dip"
            android:paddingBottom="2dip"
            android:src="@drawable/img_bulb_on" />
         <ImageView
             android:visibility="gone"
            android:id="@+id/item_img_netaget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="2dip"
            android:paddingBottom="2dip"
            android:src="@drawable/img_netgate" />

        <TextView
            android:visibility="gone"
            android:id="@+id/item_text_netgate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:layout_toRightOf="@id/item_img"
            android:text="网关" />

        <TextView
            android:id="@+id/item_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="2dip"
            android:layout_toRightOf="@id/item_img"
            android:text="灯泡 " />

        <TextView
            android:id="@+id/item_text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_text_type"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/item_img"
            android:text="长按编辑位置" />

        <TextView
            android:id="@+id/item_text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="50dip"
            android:layout_marginTop="20dip"
            android:text="开" />
    </RelativeLayout>

</LinearLayout>