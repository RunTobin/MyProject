<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud" >

    <RelativeLayout
        android:id="@+id/relative_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dip"
        android:layout_marginTop="30dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:gravity="center_horizontal"
            android:text="信安智慧"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_center"
        android:layout_margin="30dip" >

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用    户:" />

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="22dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/text_name"
            android:background="@drawable/edit_shape" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_user"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip" >

        <TextView
            android:id="@+id/text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帐   号:" />

        <EditText
            android:id="@+id/edit_user"
            android:layout_width="match_parent"
            android:layout_height="22dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/text_user"
            android:background="@drawable/edit_shape" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_username"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="30dip" >

        <TextView
            android:id="@+id/text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码:" />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="22dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/text_password"
            android:background="@drawable/edit_shape"
            android:inputType="textPassword" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_password"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="20dip" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="60dip"
            android:background="@drawable/login_selector"
            android:text="确定" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="60dip"
            android:layout_toRightOf="@id/btn_login"
            android:background="@drawable/login_selector"
            android:text="取消" />
    </RelativeLayout>

</RelativeLayout>