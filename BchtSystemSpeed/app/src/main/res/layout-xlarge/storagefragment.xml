<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/layout_storage"
    android:background="#ff323232"
    android:layout_height="match_parent">
    <include
        android:id="@+id/Bar"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_weight="1"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="10dp"
           android:layout_height="40dp"
           android:gravity="center"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20dp"
               android:textStyle="bold"
               android:textColor="#D1EEEE"
               android:text="当前设备:"/>
           <TextView
               android:id="@+id/storage_Eq_text"
               android:layout_width="100dp"
               android:layout_height="match_parent"
               android:textColor="#D1EEEE"
               android:textSize="20dp"
               android:visibility="gone"
               android:gravity="center"/>
           <Spinner
               android:id="@+id/storage_Eq"
               android:layout_width="100dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="20dp"
               android:layout_height="match_parent"
               android:textColor="#D1EEEE"
               android:gravity="center"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:textSize="20dp"
               android:textStyle="bold"
               android:textColor="#D1EEEE"
               android:text="剩余空间:"/>
           <TextView
               android:id="@+id/storage_Space"
               android:layout_width="100dp"
               android:layout_marginLeft="10dp"
               android:layout_height="match_parent"
               android:gravity="center"
               android:textColor="#D1EEEE"
               android:text=""
               />
       </LinearLayout>
       <LinearLayout
           android:id="@+id/layout_usb"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginTop="10dp"
           android:orientation="horizontal">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="40dp">
               <Button
                   android:id="@+id/storage_open"
                   android:layout_marginTop="10dp"
                   android:layout_width="200dp"
                   android:layout_height="70dp"
                   android:background="@drawable/button_selector"
                   android:textColor="#D1EEEE"
                   android:textSize="28dp"
                   android:text="打开"/>
               <Button
                   android:id="@+id/storage_delete"
                   android:layout_marginTop="10dp"
                   android:layout_width="200dp"
                   android:layout_height="70dp"
                   android:layout_below="@+id/storage_open"
                   android:background="@drawable/button_selector"
                   android:textColor="#D1EEEE"
                   android:textSize="28dp"
                   android:text="删除"/>
               <Button
                   android:id="@+id/storage_XinJ"
                   android:layout_marginTop="10dp"
                   android:layout_width="200dp"
                   android:layout_height="70dp"
                   android:layout_below="@+id/storage_delete"
                   android:background="@drawable/button_selector"
                   android:textColor="#D1EEEE"
                   android:textSize="28dp"
                   android:text="新建"/>
               <Button
                   android:id="@+id/storage_GeShiH"
                   android:layout_marginTop="10dp"
                   android:layout_width="200dp"
                   android:layout_height="70dp"
                   android:background="@drawable/button_selector"
                   android:layout_below="@+id/storage_XinJ"
                   android:textColor="#D1EEEE"
                   android:textSize="28dp"
                   android:text="格式化"/>
           </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="40dp"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:orientation="vertical">
               <View

                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#000"/>
               <ListView
                   android:id="@android:id/list"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:listSelector="@drawable/item_bg"
                   android:fastScrollEnabled="true" />

           </LinearLayout>
       </LinearLayout>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
    <Button
        android:id="@+id/storage_FanH"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:textColor="#D1EEEE"
        android:background="@drawable/button_selector"
        android:text="返回"/>

</LinearLayout>