<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/layout_picture"
    android:background="#ff323232"
    android:layout_height="match_parent">
    <include
        android:id="@+id/Bar"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="按时间查询"
            android:textColor="#D1EEEE"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <!--按照时间查询-->
        <LinearLayout
            android:id="@+id/layout_PictureTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">
            <View
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#55ffffff"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="1dp"
                    android:layout_height="110dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:background="#55ffffff"/>

                <LinearLayout
                    android:layout_below="@id/layout_Query"
                    android:layout_marginLeft="140dp"
                    android:layout_marginRight="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/picture_OneDay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selector"
                        android:textColor="#D1EEEE"
                        android:layout_weight="0.1"
                        android:text="一天"/>
                    <Button
                        android:id="@+id/picture_TwoDay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selector"
                        android:textColor="#D1EEEE"
                        android:layout_weight="0.1"
                        android:text="二天"/>
                    <Button
                        android:id="@+id/picture_ThreeDay"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selector"
                        android:textColor="#D1EEEE"
                        android:layout_weight="0.1"
                        android:text="三天"/>

                    <Button
                        android:id="@+id/picture_OneWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selector"
                        android:textColor="#D1EEEE"
                        android:layout_weight="0.1"
                        android:text="一周"/>
                    <Button
                        android:id="@+id/picture_Define"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selector"
                        android:textColor="#D1EEEE"
                        android:layout_weight="0.1"
                        android:text="自定义"/>
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="80dp"
                    android:layout_alignParentRight="true"
                    android:background="#55ffffff"/>

                <LinearLayout
                    android:id="@+id/layout_Query"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textColor="#D1EEEE"
                        android:text="快捷查询："/>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#55ffffff"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#55ffffff"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:background="#55ffffff"/>

                <RelativeLayout
                    android:id="@+id/layout_Start"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:id="@+id/pic_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始时间:"
                        android:textSize="25dp"
                        android:layout_marginLeft="80dp"
                        android:textColor="#D1EEEE"
                        android:gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>
                    <EditText
                        android:id="@+id/EditText_Start"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/pic_tv1"
                        android:background="@android:drawable/edit_text"
                        android:focusable="false"
                        android:paddingLeft="20dp"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/startTimeCheck"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/EditText_Start"
                        android:layout_alignRight="@+id/EditText_Start"
                        android:layout_alignTop="@+id/EditText_Start"
                        android:layout_below="@+id/pic_tv1"
                        android:layout_gravity="right"
                        android:background="@android:drawable/edit_text"
                        android:src="@android:drawable/ic_menu_edit" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/pic_EndTime"
                    android:layout_below="@+id/layout_Start"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    >

                    <TextView
                        android:id="@+id/pic_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="结束时间:"
                        android:textSize="25dp"
                        android:layout_marginLeft="80dp"
                        android:textColor="#D1EEEE"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>

                    <EditText
                        android:id="@+id/EditText_End"
                        android:layout_width="350dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/pic_tv2"
                        android:background="@android:drawable/edit_text"
                        android:focusable="false"
                        android:paddingLeft="20dp"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/endTimeCheck"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/EditText_End"
                        android:layout_alignRight="@+id/EditText_End"
                        android:layout_alignTop="@+id/EditText_End"
                        android:layout_below="@+id/pic_tv2"
                        android:layout_gravity="right"
                        android:background="@android:drawable/edit_text"
                        android:src="@android:drawable/ic_menu_edit" />
                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="80dp"
                    android:layout_alignParentRight="true"
                    android:background="#55ffffff"/>

            </RelativeLayout>
            <View
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#55ffffff"/>



            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <Button
                    android:id="@+id/picture_TimeSure"
                    android:layout_width="180dp"
                    android:layout_height="55dp"
                    android:text="确定"
                    android:textSize="20dp"
                    android:layout_marginLeft="90dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/button_selector"
                    android:textColor="#D1EEEE"
                    />
                <Button
                    android:id="@+id/picture_TimeCancel"
                    android:layout_width="180dp"
                    android:layout_height="55dp"
                    android:text="取消"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_selector"
                    android:textColor="#D1EEEE"
                    android:layout_marginRight="90dp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>